{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "reveal": "always",
    "tasks": [
        {
            "label": "Build Haskell using ghc",
            "command": "ghc",
            "args": [
                "app",
                "app.hs"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run haskell",
            "command": "app.exe"
        }
    ]
}